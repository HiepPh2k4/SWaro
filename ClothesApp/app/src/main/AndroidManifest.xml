<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="vn.edu.usth.clothesapp">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.ClothesApp"
        tools:targetApi="31">

        <!-- RegisterActivity: The first activity shown to the user -->
        <activity
            android:name=".activity.RegisterActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LoginActivity -->
        <activity
            android:name=".activity.LoginActivity"
            android:exported="true" />

        <!-- BodyActivity -->
        <activity
            android:name=".activity.BodyActivity"
            android:exported="true" />

        <!-- MainActivity: Only shown after the user completes registration, login, and body info steps -->
        <activity
            android:name=".activity.MainActivity"
            android:exported="true" />

        <!-- SettingActivity: Accessed from MainActivity -->
        <activity
            android:name=".activity.SettingActivity"
            android:exported="true" />

    </application>

</manifest>
